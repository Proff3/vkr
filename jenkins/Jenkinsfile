pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-access-token')
    }

    stages {
        stage('build') {
            steps {
                sh 'mvn package -DskipTests'
                sh 'docker build -t pron9/vkr .'
            }
        }
        stage('login') {
              steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
              }
            }
        stage('Push') {
            steps {
                sh 'docker push pron9/vkr'
            }
        }
        stage('Run') {
            steps {
                sh 'ssh root@84.252.138.1'
                sh 'docker pull pron9/vkr'
                sh 'docker run -d -p 8080:8080 --name vkr --env prop.tinkoffToken=$tinkoff-token pron9/vkr'
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}
